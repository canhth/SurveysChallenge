  use_frameworks!

  # Tools
  pod 'XCGLogger', '~> 6.1.0'
  pod 'Reusable', '~> 4.0'
  pod 'KeychainAccess'
  pod 'SwiftLint'


  #pod 'SwiftGen', '~> 6.0' This is just optional when we have too much resources that need no make them type-safe to use

  # Networking
  pod 'Alamofire', '~> 4.8.1'
  pod 'SwiftyJSON', '~> 4.0'

  # Reactive
  pod 'RxSwift',    '~> 4.0'
  pod 'RxCocoa',    '~> 4.0'

  # UI
  pod 'Kingfisher', '~> 5.0'
  pod 'Reusable', '~> 4.0'

  target 'SurveysChallengeTests' do
    inherit! :search_paths 
  end

  target 'SurveysChallengeUITests' do
    inherit! :search_paths 
  end

end
